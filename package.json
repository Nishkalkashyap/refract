{
  "name": "refract",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "refract-plugins/*"
  ],
  "scripts": {
    "dev": "pnpm --filter vite-example-app dev",
    "dev:next": "pnpm --filter next-example-app dev",
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "release:check": "pnpm typecheck && pnpm lint && pnpm build",
    "release:version": "node scripts/sync-release-version.mjs",
    "release:publish:dry-run": "pnpm -r --filter \"@nkstack/refract-*\" publish --access public --dry-run --no-git-checks",
    "release:publish": "pnpm run release:check && pnpm -r --filter \"@nkstack/refract-*\" publish --access public --no-git-checks"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@types/node": "latest",
    "eslint": "latest",
    "globals": "latest",
    "tsx": "^4.21.0",
    "turbo": "latest",
    "typescript": "latest",
    "typescript-eslint": "latest"
  },
  "license": "MIT"
}
